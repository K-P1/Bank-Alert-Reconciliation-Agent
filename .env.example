# Environment configuration for BARA
DATABASE_URL=
TEST_DATABASE_URL=

# API keys for LLM providers
GROQ_API_KEY=
GROQ_MODEL=

# App settings
ENV=development
LLM_PROVIDER=groq
DEBUG=true

# A2A agent name (used to build the route at /a2a/agent/<A2A_AGENT_NAME>)
A2A_AGENT_NAME=BARA

# IMAP email server settings
IMAP_HOST=imap.example.com
IMAP_USER=user@example.com
IMAP_PASS=yourpassword

# Mock Data Configuration (Development Mode)
# Number of mock emails to generate when POST /emails/fetch is called (default: 10)
MOCK_EMAIL_COUNT=10

# Number of mock transactions to generate per poll (default: 100)
POLLER_BATCH_SIZE=100
